	<h4>Contact Us</h4>
  <div id="block-contact">
  <div class="container">
      <!-- Name -->
        <div class="form-group req ">

	
  <label for="name" class="control-label">Name</label>
    	<div class="">
 	    <input class="form-control" id="name" placeholder="Your Name" ="" autocomplete="off" name="name" type="text">    	</div>
  
  
    
  
    
  
</div>
      <!-- Email -->
        <div class="form-group req ">

	
  <label for="cemail" class="control-label">Email</label>
    	<div class="">
 	    <input class="form-control" id="cemail" placeholder="Your Email" ="" autocomplete="off" name="cemail" type="text">    	</div>
  
  
    
  
    
  
</div>
      <!-- Description -->
        <div class="form-group req ">

  
  <label for="message" class="control-label">Message</label>
      <div class="">
  
  <textarea class="form-control" id="message" placeholder="Message" rows="3" cols="" name="message"></textarea>
      </div>
    
  
 </div>      <!-- Captcha -->
        <div class="captcha-wrap hidden form-group req ">
          <label for="captcha" class="control-label">Please enter the text into the field</label>
          <div class="mt10 nopadding">
            <img src="http://www.besthospitaladvisor.com/captcha?715180" alt="Please let us know, that you are human">          </div>
          <div class="mt10">
            
            <input type="text" name="captcha" id="captcha" class="form-control" autocomplete="off" />
          </div>
                  </div>
        
      <!-- Submit -->
        <div class="form-group mt20">
          <button type="submit" onclick="submit_contact()" id="contact-form-submit" class="btn btn-info" data-loading-text="Sending <i class='fa fa-spin fa-spinner'></i>">Send</button>
        </div>

  </div>
</div>
<script> 
(function($){
  $(document).ready(function() {
    $captchaWrap = $('.captcha-wrap');
    $blockContact = $('#block-contact');
    //$blockContact.crLaravelFormHandler();//js console throws error, not a function

    $blockContact.find('input[type="text"]')
      .focus(function() {
        $captchaWrap.removeClass('hidden');
      });
  })
})(jQuery);

  function submit_contact(){

      var complete = true;

      if($("#name").val().length ==  0){
          complete = false;
      }
      if($("#cemail").val().length == 0){
          complete = false;
      }
      if($("#message").val().length == 0){
          complete = false;
      }

      if($("#captcha").val().length == 0){
          complete = false;
      }

      if(complete){
          var contact_send = {};
          contact_send.name = $("#name").val();
          contact_send.cemail = $("#cemail").val();
          contact_send.message = $("#message").val();
          contact_send.captcha = $("#captcha").val();

          console.log(contact_send);
          $.ajax({
              type: 'POST',
              url: '/users/contactForm',
              data: JSON.stringify({contact: contact_send}), // or JSON.stringify ({name: 'jonas'}),
              contentType: "application/json",
              dataType: 'json',
              success: function(data) {
                  //alert('data: ' + data);
                  console.log(data.view);
                  $('#block-contact .container').html(data.view);
              },
              error: function(msg) {
                  console.log(msg.view);
                  $('#block-contact .container').html(msg.view);
                  //alert('error');
              }
          });
      }else{
          alert('error');
      }

  }
</script></div>			</div>
