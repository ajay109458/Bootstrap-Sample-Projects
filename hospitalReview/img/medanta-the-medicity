	</script>
</body></div>
<script>
	(function($){
		$(document).ready(function() {
			var moreHandler = function() {
					$('.show-more').off('click').on('click', function(e) {
						e.preventDefault();
						var $this = $(this);
						$this
							.find('.more-link')
							.hide()
								.end()
							.find('.more-text')
							.removeClass('hidden');
					});				
				}
			moreHandler();
		});
	})(jQuery)
</script>
