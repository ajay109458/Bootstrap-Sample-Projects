				$(document).ready(function() {
					$('#mvr-link').click(function(e) {
						e.preventDefault();

						// OPEN UP REVIEW NAV TAB
						var navTabs = $('ul.rating-nav-tabs').find('a');

						$.each(navTabs, function(k,v) {
							var $v = $(v);
							var aID = $v.attr('href');
							if(aID == '#reviews') {
								$v.parent('li').addClass('active').siblings('li').removeClass('active');
							}
						});

						var tabPanes = $('.tab-content').find('.tab-pane');
						$.each(tabPanes, function(k,v) {
							var $v = $(v);
							if($v.attr('id') == 'reviews') {
								$v.addClass('active in').siblings().removeClass('active in');
							}
						});

						var $this = $(this),
						scrollTo = $this.data('target');

						var offset = $(scrollTo).offset();
						$('html,body').animate({
		            						scrollTop: offset.top - 110,
		        									},
		        								500,
		        								'swing'
		        							);
					});
				});
			</script>
