	                url: $this.data('revurl'), 
	                title: $this.data('revheading'), 
	                descr: $this.data('revbody'), 
	                image: $this.data('revimg'),
	                rating: $this.data('revrating'), 
	                hospitalName: $this.data('fname'),
	                author: $this.data('author')
	              });
					});
				}
			shareHandler();

			// MORE HANDLER
				var moreHandler = function() {
					$('.show-more').off('click').on('click', function(e) {
						e.preventDefault();
						var $this = $(this);
						$this
							.find('.more-link')
							.hide()
								.end()
							.find('.more-text')
							.removeClass('hidden');
					});				
				}
			moreHandler();


			var vtngHandler = {
				init: function() {

				},
				grabElems: function() {

				},
				bindEvts: function() {

				}
			}

			// VOTING HANDLER
				var votingHandler = function() {
					$('.vote-review .vote').off('click').on('click', function() {
						var voteBtn = $(this),
						voteReviewWrap = voteBtn.parent(),
						voteDir = voteBtn.data('vote'),
						voteVal = (voteDir == 'up') ? 1 : -1,
						voteCountHtml = voteBtn.find('span.vote-count'),
						voteCount = parseInt(voteCountHtml.html()),
						reviewId = voteBtn.siblings('input[name="review_id"]').val();
						$.ajax({
			        url: "http://www.besthospitaladvisor.com/reviewVotes/update",
			        data: 'dir='+voteDir+'&review_id='+ reviewId,
			        type: 'POST',
			        success: function(res) {
			          if (res == 1) {
			          	if(voteVal == 1){
			          		var resHtml = '<i class="fa fa-thumbs-up"></i> <small>You liked this</small>';
			          		voteReviewWrap.siblings('.report-abuse-box').remove();

			          	} else {
			          		var resHtml = '<i class="fa fa-thumbs-down"></i> <small>You didn\'t like this</small>';
			          	}
			          	voteReviewWrap.html(resHtml);
			          }
			        }
			    	});
					});
				}
			votingHandler();

			// ABUSE REPORTER
				var abuseReporter = {
					init: function(cfg) {
						if(cfg.uid) {
							this.cfg = cfg;
							this.grabElems();
							this.bindEvts();							
						}

					},
					refresh: function() {
						this.grabElems();
						this.bindEvts();
					},
					grabElems: function() {
						this.reportBox = this.cfg.reportBox;
						this.template = this.cfg.template;
						this.uid = this.cfg.uid;
						this.tp = this.cfg.tp;
						this.$reportBoxButton = $(this.reportBox).find('a.btn');
					},
					bindEvts: function() {
						var self = this;

						this.$reportBoxButton.off('click').on('click', function(e) {
							// CLEANUP
							$(self.reportBox).removeClass('open').find('.report-abuse-dropdown').html('');

							// AND ACTION
							$reportButton = $(this),
							self._token = $reportButton.data('token'),
							self.rid = $reportButton.data('rid'),
							self.url = $reportButton.data('url'),
							self.$targetReportBox = $reportButton.closest(self.reportBox),
							$abusiveReportTemplate = $(self.template).html(),
							$reportAbuseDropdown = $reportButton.siblings('.report-abuse-dropdown');

							if(!$reportAbuseDropdown.html().length) {

								$reportAbuseDropdown.html($abusiveReportTemplate);
								self.$targetReportBox.addClass('open');
								$reportLink = $reportAbuseDropdown.find('a.report-link');
								$reportAbuseDropdown.find('button.close').off('click').on('click', function() {
									$reportAbuseDropdown.html('');
									self.$targetReportBox.removeClass('open');
								});
								$reportLink.off('click').on('click', function() {
									self.value = $(this).data('type');
									self.bindAbuseReportHandler();
								});
							}

						});
					},
					bindAbuseReportHandler: function(e) {
						var self = this,
								data = 'user_id=' + this.uid + '&type='+this.tp+ '&value=' + this.value + '&review_id='+ this.rid + '&_token=' + this._token;
						$.ajax({
							url: this.url,
							method: 'POST',
							data: data,
							success: function(res) {
								if(res == 1) {
									self.$targetReportBox.html('<h5><small>Thanks for your feedback!</small></h5>');
									self.$targetReportBox.siblings('.vote-review').remove();
								} else {
									self.$targetReportBox.html('<h5><small>It seems you have already reported this review!</small></h5>');
								}
								
							}
						})
					}	
				}
			abuseReporter.init({
				reportBox: '.report-abuse-box',
				template: '.abusive-report-template',
				uid: '0',
				tp: "1",
			});

			// INFINITE SCROLL
				var infiniteScroll = {
					init: function(cfg) {
						// if(cfg.total > cfg.perPage) {
							this.grabElems(cfg);
							this.measure();
							this.scrollMoreLinkEvt();
							this.page = 2;
						// }


					},
					grabElems: function(cfg) {
						this.url = cfg.url;
						this.win = cfg.win;
						this.order = cfg.order;
						this.sort = cfg.sort;
						this.$win = $(cfg.win);
						this.$doc = $(cfg.doc);
						this.contentBox = cfg.contentBox;
						this.$contentBox = $(cfg.contentBox);
						this.$scrollMoreLink = $(cfg.scrollMoreLink);
					},
					measure: function() {
						this.triggerHeight = this.$contentBox.offset().top + this.$contentBox.height();
					},
					refresh: function() {
	    			// REMEASURE ELEMENTS
		        	this.measure();
		        // RESTART SCROLL DETEPTION
		        	this.pageScrollEvt();

					},
					pageScrollEvt: function() {
						var self = this;

						// SHOW MORE BUTTON HANDLER

						this.$win.scroll(function(){
					    if( self.$win.scrollTop() + self.$win.height() > self.triggerHeight ) {

				        // STOP SCROLL DETECTION
				        	
				        	$(this).off('scroll');
				        	
				        // Ajax next page & load more
				        	self.handleScroll();
					    }
						});
					},
					scrollMoreLinkEvt: function() {
						var self = this;
						this.$scrollMoreLink.off('click').on('click', function(e) {
							e.preventDefault();
							self.handleScroll();
							self.pageScrollEvt();
							$(this).hide();
						});
					},
					handleScroll: function() {
						var self = this;
						// if($('.tab-reviews').hasClass('active')) {
							$.ajax({
		        		url: self.url,
		        		data: 'page=' + self.page+ '&facility_id=9783' + '&order=' + self.order + '&sort=' + self.sort,
		        		method: 'post',
		        		success: function(res) {
		        			if(res.results) {
			        			
			        			self.$contentBox.append(JSON.parse(res.view));
			        			$('.review-row-page-' + self.page).show('fast');
			        			self.page++;
			        			self.$doc.trigger('next-reviews-page-loaded');
			        			
		        			}
		        		}
		        	});							
						// }

					},
					restartScroll: function() {
						var self = this;
						$.ajax({
	        		url: self.url,
	        		data: 'page=' + self.page+ '&facility_id=9783' + '&order=' + self.order + '&sort=' + self.sort,
	        		method: 'post',
	        		success: function(res) {
	        			if(res.results) {
		        			
		        			self.$contentBox.append(JSON.parse(res.view));
		        			$('.review-row-page-' + self.page).show('fast');
		        			self.page++;
		        			self.$scrollMoreLink.show();
	        			}
	        		}
	        	});
					},
					restart: function() {
						this.$scrollMoreLink.hide();
						this.$contentBox.html('');
						this.page = 1;
						this.restartScroll();
						
					}
				}
			infiniteScroll.init({
				win: win,
				doc: document,
				contentBox: '.reviews-wrap',
				url: 'http://www.besthospitaladvisor.com/reviews/scroll',
				total: parseInt("28"),
				perPage: parseInt("3"),
				sort: 'desc',
				order: 'reviews.created_at',
				scrollMoreLink: '#scroll-more-link'
			});

			// NEW PAGE LOADED HANDLER
				$(document).off('next-reviews-page-loaded').on('next-reviews-page-loaded', function() {
		       setTimeout(function() {
		       	infiniteScroll.refresh();
	  				abuseReporter.refresh();
	  				votingHandler();
	  				moreHandler();
	  				shareHandler();
	  			}, 300);	
				});

				$('.review-filters').find('label').click(function() {
					var $this = $(this),
							action = $this.data('action'),
							actionVal = $this.data('value');
							switch(action) {
								case 'sort':
									infiniteScroll.sort = actionVal;
								break;

								case 'order':
									infiniteScroll.order = actionVal;
								break;
							}
							infiniteScroll.restart();

				});
		});
	})(jQuery, document, window)
	</script>
			</div>

