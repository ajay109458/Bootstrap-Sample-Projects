<script>
  // Object.create polyfill
  if (typeof Object.create != 'function') {
      Object.create = function(obj) {
          function F() {};
          F.prototype = obj;
          return new F();
      }
  }
  (function($, document, window, undefined){

      var tcrAutoComplete = function() {
        this.init = function(conf) {
          this.setVars(conf);
          this.bindInitEvts();
        },
        this.setVars = function(conf) {
          this.sInp = conf.el,
          this.$Inp = $(this.sInp),
          this.pUrl = conf.postUrl,
          this.hUrl = conf.hitsUrl,
          this.tp = conf.searchType;
          this.viewResUrl = conf.viewResUrl;
          this.formEl = conf.formEl;
          this.resBoxClass = (conf.resBoxClass != undefined) ? conf.resBoxClass : 'auto-comp-box';
          this.$resBox = $('<div class="' + this.resBoxClass + '"></div>');
        },
        this.clearFields = function() {
          switch(self.tp) {
            case 'msp':
              $('input#procedure_code').val('');
              $('input#procedure_name').val('');
              break;

            case 'testimony':
              $('input#facility_id').val('');
              break;
            break;

            case 'codes':
              $('input#facility_id').val('');
              break;

            case 'review':
              $('input#facility_id').val('');
              break;

            case 'service_parent':
              console.log('here here');
              break;
          }
        },
        this.clearRes = function() {
          this.$resBox.hide().html('');
        },
        this.handleResRowSelect = function(activeResRow) {
          switch(this.tp) {
            case 'general':
              window.location.href = activeResRow.find('a').attr('href');
              break;

            case 'msp':
              $('input#facility_id').val(activeResRow.data('facilityid'));
              var fields = ['city', 'country', 'zip', 'street', 'region'];
              $.each(fields, function(k, v) {
                var fld = activeResRow.data(v);
                $('input#'+ v).val('');
                if (fld != 'undefined') {
                  $('input#'+ v).val(fld);
                }
              });
              $('#new_provider_fields').html('');
              $('#new_facility').prop('checked', false);
              break;

            case 'testimony':
              $('input#testimony_facility_id').val(activeResRow.data('facilityid'));
              $(document).trigger('load-mp-gallery', activeResRow.data('facilityid'));
              $(document).trigger('load-mp-reviews', activeResRow.data('facilityid'));
              break;

            case 'codes':
              $('input#procedure_code').val(activeResRow.data('id'));
              $('input#procedure_name').val(activeResRow.data('procedure'));
              break;

            case 'review':
              $('input#facility_id').val(activeResRow.data('facilityid'));
              break;
            
            case 'service_parent':
              $('#parent_show').val(activeResRow.data('parentshow'));
              $('#parent').val(activeResRow.data('parent'));
              break;
          }

          this.$resBox.hide().html('');
        },
        this.bindDynamicEvts = function() {
          var self = this;
          this.$resBox.find('.res-row').on('click', function(e) {
            e.stopPropagation();
            var activeResRow = $(e.target);
            self.handleResRowSelect(activeResRow);
            self.$Inp.val(activeResRow.data('ttl'));
          });
        },
        this.bindInitEvts = function() {
          var self = this,
          timeout;

          // EVENTS
            // Results box close on click on else than itself or search input
              $(document).on('click', function(e) {
                e.stopPropagation();
                var $target = $(e.target);
                if ( !$target.hasClass('res-row')
                  && $target.attr('id') != self.sInp ) {
                    self.$resBox.hide().html('');
                }
              });

              this.$Inp.off('keydown').on('keydown', function(e) {
                e.stopPropagation();
                var $this = $(this),
                activeResRow = self.$resBox.find('.active');
                if ([13,9].contains(e.keyCode) && activeResRow.data('no')) {

                  if (e.keyCode == 13) {
                    e.preventDefault();
                  }
                  self.handleResRowSelect(activeResRow);
                }
              });

              $(this.sInp).off('keyup').on('keyup', function(e) {
                e.stopPropagation();
                var $this = $(this),
                    activeResRow = self.$resBox.find('.active');
                    $resHtml = $('.res-row'),
                    resLngth = $resHtml.length;

                if ( [38, 40].contains(e.keyCode) ) {

                  if (resLngth) {

                    var pos = 1;
                    if (activeResRow.data('no')) {
                      var pos = (e.keyCode == 38)
                                  ? activeResRow.data('no') - 1
                                  : activeResRow.data('no') + 1;
                      if (pos > resLngth) {
                        pos = 1;
                      } else {
                        if (pos < 1) {
                          pos = resLngth;
                        }
                      }
                      $resHtml.removeClass('active');

                    }

                    $.each($resHtml, function(key, val) {
                        var $val = $(val);
                        if($(val).data('no') == pos) {
                          $val.addClass('active');
                          $this.val($val.data('ttl'));
                        }
                    });

                  }

                }
                switch(e.keyCode) {
                  case 38:
                  this.keyCode = 'up';
                  break;

                  case 40:
                  this.keyCode = 'down';
                  break;
                }

                if (27 === e.keyCode) {

                  $this.val('');
                  self.$resBox.hide().html('');

                } else {

                  if ($this.val().length > 2) {
                    if (![38, 40, 37, 39, 13, 9].contains(e.keyCode)) {
                      self.clearFields();
                      clearTimeout(timeout);
                      timeout = setTimeout(function() {
                        self.search();
                      }, 300);
                    } else {

                      if ( self.searchXHR && self.searchXHR.readyState != 4) {
                        // self.searchXHR.abort();
                      }
                    }

                  } else {
                    self.$resBox.hide().html('');
                  }

                }
              });

              $(this.formEl).on('submit', function(e){
                e.preventDefault();
                if($(self.sInp).val().length >= 3) {
                  window.location.href = self.viewResUrl + '?keyword=' + $(self.sInp).val();
                } 
              });
        },
        this.redrawServiceParents = function(results) {
          var self = this,
          keyword = self.$Inp.val();

          if(typeof results !== 'undefined') {

            var html = '', i = 1;
            $.each(results, function(key, item) {
              html += '<div class="res-row clearfix"><div class="res-row-content"><div class="res-row-name"><a data-parent="'+item.id+'" data-parentshow="' + item.id + ' - ' + item.name + '" href="#">' + item.id + ' - ' + item.name + '</a></div></div></div>';
            });
            this.$Inp.after(this.$resBox.show().html(html));

          } else {
            this.$resBox.show().html('<div class="res-null">Sorry, no results found</div>');
          }
        },
        this.redrawRes = function(results) {

          var self = this,
          keyword = self.$Inp.val();

          var keywords = keyword.trim();
              keywords = keywords.replace(/[^A-Za-z0-9]/, ' ').replace(/\s+/g, ' ').split(' ');

          if(typeof results !== 'undefined') {

            var html = '', i = 1;
            $.each(results, function(cat, res) {

              switch(cat) {
                case 'facilities':
                  
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-h-square"></i>';
                break;

                case 'specialty':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-stethoscope"></i>';
                break;

                case 'service':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-user-md"></i>';
                break;

                case 'type':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-university"></i>';
                break;

                case 'size':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-building"></i>';
                break;

                case 'other_services':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-plus"></i>';
                break;

                case 'languages_spoken':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-globe"></i>';
                break;

                case 'accreditation_awards':
                  var catPlural = res.taxonomy,
                      catIcon = '<i class="fa fa-check-circle"></i>';
                break;
              }

              html += '<div class="res-cat clearfix"><span class="cat-icon pull-left mr5">'+catIcon+'</span> <span class="res-cat-name pull-left">'+catPlural+'</span></div>';
              var resCount = 0;
              
              $.each(res.data, function(key, val) {

                var hName = '',
                    hCity = '', 
                    hAddress = '';

                if( typeof val.name !== 'undefined' && val.name) {
                  $.each(keywords, function(k, v) {
                    var kw = v.trim();
                    if(kw !== '') {
                      if(hName != '') {
                        hName = hName.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      } else {
                        hName = val.name.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      }
                    } 
                  });
                } else {
                  hName = '';
                }

                if( typeof val.city !== 'undefined' && val.city) {
                  $.each(keywords, function(k, v) {
                    var kw = v.trim();
                    if(kw !== '') {
                      if(hCity != '') {
                        hCity = hCity.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      } else {
                        hCity = val.city.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      }
                    }
                  });
                } else {
                  hCity = '';
                }

                if( typeof val.formatted_address !== 'undefined' && val.formatted_address) {
                  $.each(keywords, function(k, v) {
                    var kw = v.trim();
                    if(kw !== '') {
                      if(hAddress != '') {
                        hAddress = hAddress.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      } else {
                        hAddress = val.formatted_address.replace(new RegExp( "(" + kw + ")" , 'gi' ), '<b>$1</b>');
                      }
                    }
                  });
                } else {
                  hAddress = '';
                }

                if ('facilities' != cat) {

                  var rowTxt = hName;
                  html += '<div data-ttl="' + val.name + '" data-no="'+ i +'" class="res-row"><a href="'+self.viewResUrl+'?' +cat.toLowerCase() + '[]='+ val.id+'">' + rowTxt +'</a></div>';

                } else {

                  var rowTxt = hName + hCity;
                  html += '<div data-ttl="' + val.name + '" data-no="'+ i +'" class="res-row clearfix">';
                  if(val.feat_img_thumb) {
                    html += '<img class="res-row-img" src="/'+val.feat_img_thumb +'"/>';
                  }
                  
                  html += '<div class="res-row-content"><div class="res-row-name"><a href="'+self.viewResUrl+'/'+ val.slug+'">' + hName + '</a></div>';
                  html += '<a href="'+self.viewResUrl+'/'+ val.slug+'"><h6><small class="res-row-address">'+hAddress+'</small></h6></a>';
                  html += '<div class="res-row-rating"><a href="'+self.viewResUrl+'/'+ val.slug+'">'+val.rating_html+'</a></div>';
                  html += '</div></div>';

                }
                resCount++;
                i++;
              });
              if(resCount == 5) {
                html += '<div class="res-row-more"><a href="'+self.viewResUrl+'?keyword='+keyword +'">More...</a></div>';
              } 

            });

            this.$Inp.after(this.$resBox.show().html(html));

          } else {

            this.$resBox.show().html('<div class="res-null">Sorry, no results found</div>');
          }
        },
        this.redrawCodes = function(results) {

          if (results.total != 0) {

            var html = '',
                i = 1;
            $.each(results.data, function(key, val) {
              html += '<div data-ttl="' + val.product_link + ' - ' + val.code + ' - ' + val.procedure + '" data-productlink="' + val.product_link + ' data-code="' + val.code + ' data-procedure="' + val.procedure + '" data-id="'+ val.id +'" data-no="'+ i +'" class="res-row">' + val.product_link + ' - ' + val.code + ' - ' + val.procedure + '</div>';
              i++;
            });
            this.$Inp.after(this.$resBox.show().html(html));

          } else {
            // this.$resBox.show().html('<div class="res-null">Sorry, no results found</div>')
          }
        },
        this.redrawMPs = function(results, type) {

          if (results.facilities.data != undefined) {

            keyword = this.$Inp.val();
            var html = '',
                i = 1;
            $.each(results.facilities.data, function(key, val) {
              var hName = (val.name != undefined)
                ? val.name.replace(new RegExp( "(" + keyword.toLowerCase() + ")" , 'gi' ), '<b>$1</b>')
                : '';

              var hCity = (val.city != undefined)
                ? ' - '+ val.city.replace(keyword, '<b>'+keyword+'</b>')
                : '';
              html += '<div data-street="'+val.street+'" data-country="'+val.country+'" data-zip="'+val.zip+'" data-city="'+val.city+'" data-state="'+ val.state +'" data-facilityid="'+val.id+'" data-ttl="' + val.name + '" data-no="'+ i +'" class="res-row">' + hName + hCity + '</div>';
              i++;
            });
            this.$Inp.after(this.$resBox.show().html(html));

          } else {
            if (undefined != type) {

              switch(type) {
                case 'review':
                this.$Inp.after(this.$resBox.show().html('<div class="res-null">Sorry, no results found</div>'));
                break;

                case 'msp':
                this.$Inp.after(this.$resBox.show().html('<div class="res-null">Sorry, no medical providers found</div>'));
                break;

                default:
                break;
              }
            }
          }
        },
        this.redrawTestimonies = function(results, type) {

          if (results.facilities.length != 0) {

            keyword = this.$Inp.val();
            var html = '',
                i = 1;
            $.each(results.facilities, function(key, val) {
              var hName = (val.name != undefined)
                ? val.name.replace(new RegExp( "(" + keyword.toLowerCase() + ")" , 'gi' ), '<b>$1</b>')
                : '';

              var hCity = (val.city != undefined)
                ? ' - '+ val.city.replace(keyword, '<b>'+keyword+'</b>')
                : '';
              html += '<div data-featimg="'+ val.feat_img +'" data-facilityid="'+val.id+'" data-ttl="' + val.name + '" data-no="'+ i +'" class="res-row">' + hName + hCity + '</div>';
              i++;
            });
            this.$Inp.after(this.$resBox.show().html(html));

          } else {
            if ('review' == type) {
              this.$resBox.show().html('<div class="res-null">Sorry, no results found</div>');
            }

          }
        },
        this.search = function() {

          var self = this;

          if (this.searchXHR && this.searchXHR.readyState != 4) {
            this.searchXHR.abort();
          }
          if ( this.hitsXHR &&  this.hitsXHR.readyState != 4) {
             this.hitsXHR.abort();
          }
          var data = 'keyword='+ this.$Inp.val();
          if (this.tp == 'general') {
            data += '&ext=1';
          }
          if(this.tp == 'service_parent') {
            data += '&current_term=' + $("#current_term").val();
          }

          this.searchXHR = $.ajax({
            url: self.pUrl,
            data: data,
            type: 'post',
            dataType: 'json',
            success: function(data) {

              switch(self.tp) {
                case 'general':
                  self.redrawRes(data);
                  break;

                case 'codes':
                  self.redrawCodes(data);
                  break;

                case 'msp':
                  self.redrawMPs(data, self.tp);
                  break;

                case 'testimony':
                  self.redrawTestimonies(data);
                  break;

                case 'review':
                  self.redrawMPs(data, self.tp)

                case 'service_parent':
                  self.redrawServiceParents(data);
                  break;

                default:
                  self.redrawRes(data);
                  break;
              }
              self.bindDynamicEvts();
            }
          });
          
          // if (this.$Inp.val().length > 2) {
          //   this.hitsXHR = $.ajax({
          //     url: self.hUrl,
          //     data: 'keyword='+this.$Inp.val(),
          //     type: 'post',
          //     // dataType: 'json',
          //     success: function(data) {
          //       console.log(data);
          //     }
          //   });
          // }
        }
      };

      $(document).ready(function() {
      // PARTICULAR CALLS
        // topSearch.blade.php:
        var topSearchElements = [
              {
                el: '#top-search',
                postUrl: 'http://www.besthospitaladvisor.com/medical-providers/s',
                searchType: 'general',
                viewResUrl: 'http://www.besthospitaladvisor.com/medical-providers',
                hitsUrl: 'http://www.besthospitaladvisor.com/medical-providers/kwSearchHits',
                formEl: '#top-search-form'
              },
              {
                el: '#top-search-alt',
                postUrl: 'http://www.besthospitaladvisor.com/medical-providers/s',
                searchType: 'general',
                viewResUrl: 'http://www.besthospitaladvisor.com/medical-providers',
                hitsUrl: 'http://www.besthospitaladvisor.com/medical-providers/kwSearchHits',
                formEl: '#top-search-form-alt'
              },
              {
                el: '#front-search',
                postUrl: 'http://www.besthospitaladvisor.com/medical-providers/s',
                searchType: 'general',
                viewResUrl: 'http://www.besthospitaladvisor.com/medical-providers',
                hitsUrl: 'http://www.besthospitaladvisor.com/medical-providers/kwSearchHits',
                formEl: '#slider-search-form'
              },
              {
                el: '#testimony_provider_name',
                postUrl: 'http://www.besthospitaladvisor.com/medical-providers/s',
                searchType: 'testimony',
                viewResUrl: 'http://www.besthospitaladvisor.com/medical-providers',
                hitsUrl: 'http://www.besthospitaladvisor.com/medical-providers/kwSearchHits'
              },
              {
                el: '#procedure',
                postUrl: 'http://www.besthospitaladvisor.com/shares/search_codes',
                searchType: 'codes'
              },
              {
                el: '#provider_name',
                postUrl: 'http://www.besthospitaladvisor.com/medical-providers/s',
                searchType: 'msp',
                viewResUrl: 'http://www.besthospitaladvisor.com/medical-providers',
                hitsUrl: 'http://www.besthospitaladvisor.com/medical-providers/kwSearchHits'
              },
              {
                el: '#kw-service-parent',
                postUrl: 'http://www.besthospitaladvisor.com/taxonomies/terms/serviceParent',
                searchType: 'service_parent'
              },
        ];
        var acs = [];
        $.each(topSearchElements, function(k, v) {
          if($(v.el).length) {
            acs[k] = new tcrAutoComplete; acs[k].init(v);
          } 
        });      
      })

  })(jQuery, document, window)
</script>
